<div class="navigation">
    <button onclick="goToFirst()">First</button>
    <button onclick="goToPrevious()">Previous</button>
    <button onclick="goToNext()">Next</button>
    <button onclick="goToLast()">Last</button>
</div>

<script>
    const episodes = 33; // Total number of episodes
    let currentEpisode = 1; // Track the current episode
    const episodeList = document.getElementById('episodes');

    // Create the episode links
    for (let i = 1; i <= episodes; i++) {
        const li = document.createElement('li');
        const link = document.createElement('a');
        link.href = `MAHABHARATA/episode${i}.html`; // Assumes the files are named episode1.html, episode2.html, etc.
        link.innerText = `Episode ${i}`;
        li.appendChild(link);
        episodeList.appendChild(li);
    }

    // Functions for navigation buttons
    function goToFirst() {
        currentEpisode = 1;
        window.location.href = `episode${currentEpisode}.html`;
    }

    function goToPrevious() {
        if (currentEpisode > 1) {
            currentEpisode--;
            window.location.href = `episode${currentEpisode}.html`;
        }
    }

    function goToNext() {
        if (currentEpisode < episodes) {
            currentEpisode++;
            window.location.href = `episode${currentEpisode}.html`;
        }
    }

    function goToLast() {
        currentEpisode = episodes;
        window.location.href = `episode${currentEpisode}.html`;
    }
</script> -->

